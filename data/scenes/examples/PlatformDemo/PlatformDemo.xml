<Scene name="PlanningScene">
    <Model name="Armar-III" initConfig="start">
        <File>/robots/Armar3/Armar3.xml</File>

        <Configuration name="start">
            <!--Node name="X_Platform" unit="mm" value="4500"/>
            <Node name="Y_Platform" unit="mm" value="6000"/-->
            <Node name="X_Platform_joint" unit="mm" value="10"/>
            <Node name="Y_Platform_joint" unit="mm" value="2000"/>
            <Node name="Yaw_Platform_joint" unit="radian" value="-1.57"/>
        </Configuration>

        <Configuration name="goal">
            <Node name="X_Platform_joint" unit="mm" value="4500"/>
            <Node name="Y_Platform_joint" unit="mm" value="9000"/>
            <Node name="Yaw_Platform_joint" unit="radian" value="1.57"/>
        </Configuration>
    
        <!-- These joints are considered for motion planning-->
        <JointSet name="Planning" kinematicRoot="Armar3_Base" tcp="Platform">
            <Node name="X_Platform_joint"/>
            <Node name="Y_Platform_joint"/>
            <Node name="Yaw_Platform_joint"/>
        </JointSet>
    
        <!-- The second collision model (torso, head and platform)-->
        <LinkSet name="ColModel Robot Body">
            <Node name="Platform_link"/>
            <Node name="Hip Yaw_link"/>
            <Node name="Head_Tilt_link"/>
        </LinkSet>

